function usage() {
    cat <<EOF
Display ANSI color codes.

Usage: ${SCRIPTNAME}

EOF
}


##############################################################################
# PROGRAM BEGINS HERE

include "getopt.sh"

SCRIPTNAME=$(basename "${BASH_SOURCE}")


function main() {
    local OPTOPT OPTARG OPTERR OPTARRAY
    local errcount=0

    # Process options
    while getopt-sh "h" "help" "$@"; do
        case "$OPTOPT" in
            -h|--help)  usage && exit 0          ;;
            *)          errcount=$((errcount+1)) ;;
        esac
    done

    # Sanity check
    if (( errcount )); then
        echo "Type '${SCRIPTNAME} -h' for help." 1>&2
        exit 1
    fi

    ansi "${OPTARRAY[@]}"
}


function ansi() {
    # for back in 40 41 42 43 44 45 46 47; do
        for fore in 30 31 32 33 34 35 36 37; do
            for attr in 0 1 4 5 7 8; do
                # code="$attr;$fore;$back"
                code="$attr;$fore"

                echo -en "\e[${code}m${code}\e[0m\t"
            done
            echo
        done
    # done
}


##############################################################################
# ENTRY POINT

main "$@"
